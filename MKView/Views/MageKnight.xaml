<UserControl x:Class="MKView.Views.MageKnight"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MKView.Views"
             mc:Ignorable="d" Height="100" Width="100"
             DataContext="{Binding}">
    <Grid MouseDown="Grid_MouseDown">
        <local:Dial DataContext="{Binding Dial}"/>
        <TextBlock Text="{Binding Name}"  Foreground="White" HorizontalAlignment="Center" />
    </Grid>
</UserControl>
