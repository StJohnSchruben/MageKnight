<UserControl x:Class="MKView.Views.Click"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MKView.Views"
             mc:Ignorable="d" 
             Height="10" d:DesignWidth="40">
    <Grid>
        <WrapPanel >

                <local:Stat DataContext="{Binding Speed}" />

                <local:Stat DataContext="{Binding Attack}" />
 
                <local:Stat DataContext="{Binding Defense}" />

                <local:Stat DataContext="{Binding Damage}" />

        </WrapPanel>
    </Grid>
</UserControl>
