<UserControl x:Class="MKView.Views.MageDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MKView.Views"
              xmlns:view="clr-namespace:MKView"
              DataContext="{Binding GameUser, Source={x:Static view:SharedResources.ViewModelLocator}}"
             mc:Ignorable="d" >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <x:Static Member="local:SharedResourceDictionary.Instance" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Viewbox Stretch="Fill" Height="700" Width="350">
        <Grid Height="700" Width="350">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="17*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="8*"/>
                    <RowDefinition Height="37*"/>
                </Grid.RowDefinitions>
                <ItemsControl ItemsSource="{Binding SelectedMageKnight.Dial.Clicks}" Background="LightBlue" Grid.Row="1" Grid.ColumnSpan="2" >
                    <ItemsControl.ItemsPanel >
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Viewbox Width="340" Height="85">
                                <local:Click />
                            </Viewbox>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Image  Source="{Binding SelectedMageKnight.ModelImage}"  VerticalAlignment="Top"  HorizontalAlignment="Left" Height="{Binding ActualHeight}" Width="{Binding ActualWidth}"/>
                <Label Content="{Binding SelectedMageKnight.Name}" Grid.Column="1" HorizontalAlignment="Left" Margin="13,5,0,0" VerticalAlignment="Top" Height="25" Width="190"/>
            </Grid>
        </Grid>

    </Viewbox>

</UserControl>
